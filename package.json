{
  "name": "sozu",
  "private": true,
  "homepage": "https://sozu-wiki.netlify.app",
  "repository": "cyckey/sozu",
  "license": "MIT",
  "author": "cyckey",
  "scripts": {
    "build": "pnpm -F=docs build",
    "change": "cd src && pnpm dlx changelogithub --dry",
    "dev": "pnpm -F=docs dev",
    "format": "prettier --write .",
    "format:cheak": "prettier --check .",
    "postinstall": "simple-git-hooks",
    "preview": "pnpm -F=docs preview",
    "release": "cd src && pnpm release",
    "update-logs": "node scripts/update-logs.js"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "post-commit": "node scripts/post-commit.js"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "lint-staged": "^15.4.3",
    "prettier": "3.5.0",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-packagejson": "^2.5.8",
    "prettier-plugin-sort-json": "^4.1.1",
    "simple-git-hooks": "^2.11.1"
  },
  "packageManager": "pnpm@10.0.0"
}
